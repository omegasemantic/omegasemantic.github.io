#!/bin/bash

# replace-prose.sh
# Safely replace 'prose' with 'pip' in text files, skipping _site and vendor

echo "Starting global replacement of 'prose' with 'pip'..."

# File extensions to process
EXTENSIONS="md html css yml txt"

for ext in $EXTENSIONS; do
  find . -type f -name "*.$ext" \
    ! -path "./_site/*" \
    ! -path "./vendor/*" \
    -exec sed -i.bak 's/\bprose\b/pip/g' {} +
done

echo "Replacement done. Backup files (*.bak) are preserved."
echo "Review changes and delete backups when satisfied:"
echo "find . -name '*.bak' -delete"

